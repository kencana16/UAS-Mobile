<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kencana.uas">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".DetailSellActivity"
            android:theme="@style/AppThemeNoActBar"></activity>
        <activity android:name=".SellDataActivity" />
        <activity
            android:name=".EditDataActivity"
            android:label="Edit Data" />
        <activity
            android:name=".DetailShowActivity"
            android:label="Detai Barang" />
        <activity
            android:name=".ShowDataActivity"
            android:label="Daftar Barang" />
        <activity
            android:name=".AddDataActivity"
            android:label="Tambah Data" />
        <activity
            android:name=".HomeActivity"
            android:theme="@style/AppThemeNoActBar" />
        <activity
            android:name=".SplashScreen"
            android:theme="@style/AppThemeNoActBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
    </application>

</manifest>