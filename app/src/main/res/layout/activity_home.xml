<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    tools:context=".HomeActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/topBarHome"
        android:layout_width="fill_parent"
        android:layout_height="170dp"
        android:paddingBottom="20dp"
        android:background="@drawable/bg_gradient">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_untitled_2"
            android:layout_centerInParent="true"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_below="@id/topBarHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_container"
        android:layout_marginTop="-20dp"
        android:paddingTop="20dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        >
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2">

            <androidx.cardview.widget.CardView
                android:layout_column="0"
                android:layout_row="0"
                android:layout_columnWeight="1"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="5dp"
                >
                <LinearLayout
                    android:id="@+id/btnAddData"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:padding="10dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/ic_add_database"/>
                    <TextView
                        android:id="@+id/tv_chipset"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:text="Tambah Data"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_column="1"
                android:layout_row="0"
                android:layout_columnWeight="1"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="5dp"

                >
                <LinearLayout
                    android:id="@+id/btnReadData"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:padding="10dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/ic_look_database"/>
                    <TextView
                        android:id="@+id/tv_resolution"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:text="Lihat Data"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_column="0"
                android:layout_row="1"
                android:layout_columnWeight="1"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="5dp"

                >
                <LinearLayout
                    android:id="@+id/btnSell"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:padding="10dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/ic_sell"/>
                    <TextView
                        android:id="@+id/tv_camera"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:text="Jual Barang"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_column="1"
                android:layout_row="1"
                android:layout_columnWeight="1"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="5dp"

                >
                <LinearLayout
                    android:id="@+id/btnExit"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:padding="10dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/ic_exit"/>
                    <TextView
                        android:id="@+id/tv_battery"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:text="Keluar"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>



        </GridLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Riyan Surya Kencana\nA22.2018.02684"
        android:textSize="10sp"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"/>
</RelativeLayout>